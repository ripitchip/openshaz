<script setup lang="ts">
import { ref } from 'vue'
import { Button } from '@/components/ui/button'
import { Card, CardContent, CardDescription, CardHeader, CardTitle, CardFooter } from '@/components/ui/card'
import { Input } from '@/components/ui/input'
import { Badge } from '@/components/ui/badge'
import { Separator } from '@/components/ui/separator'

interface Music {
  id: number
  title: string
  artist: string
  genre: string
  bpm: number
  key: string
}

const currentTab = ref('add')
const backendUrl = ref('http://localhost:8000')
const healthStatus = ref<'unknown' | 'healthy' | 'error'>('unknown')
const isCheckingHealth = ref(false)

const checkHealth = async () => {
  isCheckingHealth.value = true
  try {
    const response = await fetch(`${backendUrl.value}/health`)
    if (response.ok) {
      healthStatus.value = 'healthy'
    } else {
      healthStatus.value = 'error'
    }
  } catch (error) {
    healthStatus.value = 'error'
  } finally {
    isCheckingHealth.value = false
  }
}

const saveBackendUrl = () => {
  localStorage.setItem('backendUrl', backendUrl.value)
  checkHealth()
}

const loadSettings = () => {
  const savedUrl = localStorage.getItem('backendUrl')
  if (savedUrl) {
    backendUrl.value = savedUrl
  }
  checkHealth()
}

// Load settings on mount
loadSettings()

const newMusic = ref({
  title: '',
  artist: '',
  genre: '',
  bpm: 0,
  key: ''
})

const musicList = ref<Music[]>([
  { id: 1, title: 'Sunset Boulevard', artist: 'John Doe', genre: 'Electronic', bpm: 128, key: 'Am' },
  { id: 2, title: 'Midnight Dreams', artist: 'Jane Smith', genre: 'Ambient', bpm: 95, key: 'Em' },
  { id: 3, title: 'Electric Pulse', artist: 'The Synths', genre: 'Techno', bpm: 135, key: 'Dm' }
])

const selectedMusic = ref<number[]>([])

const addMusic = () => {
  if (newMusic.value.title && newMusic.value.artist) {
    musicList.value.push({
      id: Date.now(),
      ...newMusic.value
    })
    newMusic.value = { title: '', artist: '', genre: '', bpm: 0, key: '' }
    currentTab.value = 'list'
  }
}

const toggleSelection = (id: number) => {
  const index = selectedMusic.value.indexOf(id)
  if (index > -1) {
    selectedMusic.value.splice(index, 1)
  } else {
    if (selectedMusic.value.length < 2) {
      selectedMusic.value.push(id)
    }
  }
}

const getSelectedMusicDetails = () => {
  return selectedMusic.value.map(id => musicList.value.find(m => m.id === id)).filter(Boolean)
}

const calculateSimilarity = () => {
  const selected = getSelectedMusicDetails()
  if (selected.length !== 2) return 0

  const [music1, music2] = selected as Music[]

  // Simple similarity calculation based on BPM and genre
  const bpmDiff = Math.abs(music1.bpm - music2.bpm)
  const bpmSimilarity = Math.max(0, 100 - bpmDiff)
  const genreSimilarity = music1.genre === music2.genre ? 100 : 50

  return Math.round((bpmSimilarity + genreSimilarity) / 2)
}
</script>

